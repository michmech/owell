<link rel="stylesheet" href="/footer/styles.css"/>
<footer>
  <div class="main">

    <div class="right">
      <div class="uilang">
        <a href="<%=pageUrls["gd"]%>" class="<%=(uilang=="gd" ? "current" : "")%>">Gàidhlig</a>
        <a href="<%=pageUrls["en"]%>" class="<%=(uilang=="en" ? "current" : "")%>">English</a>
      </div>
    </div>

    <div class="left">
      <div class="title"><%=L("#sitetitle")%></div>
      <div class="subtitle">
        <%=L("#sitedescription")%>
        <span class="links">
          <span class="link">
            <span class="divider">&middot;</span>
            <a href="/<%-uilang%>/<%-L("mu-ar-deidhinn|about-us")%>"><%=L("#aboutus")%></a>
          </span>
          <span class="link">
            <span class="divider">&middot;</span>
            <a href="/<%-uilang%>/<%-L("priobhaideachd|privacy")%>"><%=L("#privacy")%></a>
          </span>
          <span class="link">
            <span class="divider">&middot;</span>
            <a href="/<%-uilang%>/<%-L("so-ruigsinneachd|accessibility")%>"><%=L("#accessibility")%></a>
          </span>
        </span>
      </div>
      <div class="guidelink">
        <span class="icon circle-info"></span>
        <a href="/<%-uilang%>/<%-L("treoir|guide")%>">
          <%=L("#guidefortranscribers")%>
        </a>
      </div>
      <div class="icons">
        <a target="_blank" href="https://www.ed.ac.uk/" class="ue">
          <img src="/footer/ue.png" alt="<%=L("#unofed")%>">
        </a>
        <a target="_blank" href="https://www.smo.uhi.ac.uk/" class="smo">
          <img src="/footer/smo.png" alt="<%=L("Sabhal Mòr Ostaig")%>">
        </a>
        <a target="_blank" href="https://www.gov.scot/" class="scotgov">
          <img src="/footer/scotgov.png" alt="<%=L("#scotgov")%>">
        </a>
      </div>
      <div class="statement">
        <%=L("#unofedstatement")%>
      </div>
    </div>

  </div>
</footer>